<!-- Add a character limit to Title and check for duplicate options-->
<form novalidate class="simple-form">
  <label>Question: <input type="text" ng-model="newPoll.title" /></label><br />
  <h3>Options:</h3>
  <div ng-repeat="choice in options">
    <span>
      <input type="text" ng-model="choice.value" />
      <input type="button" ng-click="remove($index)" ng-show="$index > 1" value="Remove" />
    </span>
  </div>
  <button ng-click="add()">Add Input</button><br />
  <input type="button" ng-click="reset()" value="Reset" />
  <input type="submit" ng-click="update(newPoll, options)" value="Save" />
</form>
